<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Full Name"
            android:background="@color/lightGray"
            android:padding="10dp"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/dateOfBirth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Date of Birth (YYYY-MM-DD)"
            android:background="@color/lightGray"
            android:padding="10dp"
            android:textColor="@color/black"
            android:layout_marginTop="16dp"/>

        <EditText
            android:id="@+id/nationality"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nationality"
            android:background="@color/lightGray"
            android:padding="10dp"
            android:textColor="@color/black"
            android:layout_marginTop="16dp"/>

        <EditText
            android:id="@+id/passportNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Passport Number"
            android:background="@color/lightGray"
            android:padding="10dp"
            android:textColor="@color/black"
            android:layout_marginTop="16dp"/>

        <EditText
            android:id="@+id/visaType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Visa Type"
            android:background="@color/lightGray"
            android:padding="10dp"
            android:textColor="@color/black"
            android:layout_marginTop="16dp"/>

        <EditText
            android:id="@+id/purposeOfVisit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Purpose of Visit"
            android:background="@color/lightGray"
            android:padding="10dp"
            android:textColor="@color/black"
            android:layout_marginTop="16dp"/>

        <Button
            android:id="@+id/applyButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Apply for Visa"
            android:textColor="@color/white"
            android:layout_marginTop="16dp"/>
    </LinearLayout>
</ScrollView>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/applicationName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:padding="8dp"/>

        <TextView
            android:id="@+id/applicationDateOfBirth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:padding="8dp"/>

        <TextView
            android:id="@+id/applicationNationality"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:padding="8dp"/>

        <TextView
            android:id="@+id/applicationPassportNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:padding="8dp"/>

        <TextView
            android:id="@+id/applicationVisaType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:padding="8dp"/>

        <TextView
            android:id="@+id/applicationPurposeOfVisit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:padding="8dp"/>
        <TextView
            android:id="@+id/applicationStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:padding="8dp"/>

        <Button
            android:id="@+id/editApplicationButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit Application"
            android:textColor="@color/white"
            android:layout_marginTop="16dp"/>
    </LinearLayout>
</ScrollView>
